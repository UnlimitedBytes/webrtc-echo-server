# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Python files
*.py text diff=python

# JavaScript files
*.js text diff=javascript

# HTML files
*.html text diff=html

# CSS files
*.css text diff=css

# Documentation
*.md text diff=markdown
*.txt text

# Config files
*.json text
*.yml text
*.yaml text
*.conf text

# Git config
.gitattributes text
.gitignore text
.gitconfig text

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.db binary
*.p binary
*.pkl binary
*.pyc binary
*.pyd binary
*.pyo binary

# Image files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.svg text